<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="allButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bluesky</item>
        <item name="android:textSize">@dimen/global_button_font_basic</item>
        <item name="android:background">@color/bluesea</item>
        <item name="android:layout_margin">@dimen/global_padding_or_margin_small</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:radius">5dp</item>
    </style>

    <style name="chronoDirect">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/global_padding_or_margin_small</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/bluesea</item>
        <item name="android:textSize">@dimen/direct_chrono_font</item>
        <item name="android:numeric">decimal</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:autoText">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:format">%s</item>
    </style>

    <style name="titleContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_margin">@dimen/global_padding_or_margin_small</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/bluesea</item>
        <item name="android:textSize">@dimen/title_textview_font</item>
        <item name="android:inputType">text</item>
        <item name="android:autoText">false</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
