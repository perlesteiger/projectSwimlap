<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/application_background">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/id_button_start_simple"
            android:layout_width="@dimen/simple_button_start_stop_side"
            android:layout_height="@dimen/simple_button_start_stop_side"
            android:background="@drawable/button_simple_start_clickable"
            android:layout_margin="@dimen/global_padding_or_margin_small"
            android:text="Start"
            android:textSize="@dimen/simple_button_start_stop_font"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>

    <Chronometer
        android:id="@+id/id_chrono_simple"
        style="@style/chronoDirect"
        android:textAlignment="center"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/id_button_stop_simple"
            android:layout_width="@dimen/simple_button_start_stop_side"
            android:layout_height="@dimen/simple_button_start_stop_side"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/global_padding_or_margin_small"
            android:background="@drawable/button_simple_stop_clickable"
            android:text="Stop"
            android:textSize="@dimen/simple_button_start_stop_font"
            android:textColor="@color/white"
            />
    </RelativeLayout>


</LinearLayout>