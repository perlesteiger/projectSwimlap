<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/id_ranking_textview_race"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textColor="@color/bluesky"
            android:textSize="@dimen/ranking_textview_row_race_font"/>

        <TextView
            android:id="@+id/id_ranking_textview_swimtime"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/redstop"
            android:textSize="@dimen/ranking_textview_row_race_font"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_ranking_layout_race_tofill"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/ranking_padding_row_lap">

    </LinearLayout>


</LinearLayout>