<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/id_textview_meeting_details_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/detail_textview_big_font"
        android:textColor="@color/bluesea"
        android:text="name"
        />
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/id_textview_meeting_details_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textColor="@color/bluesea"
        android:text="city"
        android:textSize="@dimen/detail_textview_medium_font"
        />

    <TextView
        android:id="@+id/id_textview_meeting_details_poolsize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/redstop"
        android:text="poolsize"
        android:textSize="@dimen/detail_textview_big_font"
        />

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/id_textview_meeting_details_startdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/bluesea"
        android:text="startdate"
        android:layout_gravity="left"
        android:textSize="@dimen/detail_textview_small_font"
        />

    <TextView
        android:id="@+id/id_textview_meeting_details_stopdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/bluesea"
        android:text="stopdate"
        android:textSize="@dimen/detail_textview_small_font"
        />

    </LinearLayout>


    <ListView
        android:id="@+id/id_listview_meeting_details_swimmers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>